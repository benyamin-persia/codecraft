# CodeCraft Configuration

# Server Configuration
PORT=3001
PROJECT_ROOT=./your-project

# Cursor AI Configuration (Primary - No API key needed!)
USE_CURSOR_AI=true
CURSOR_HOST=localhost
CURSOR_PORT=3000

# Fallback AI Service (Only if you want backup)
# FALLBACK_TO_OPENAI=false
# OPENAI_API_KEY=your_openai_api_key_here

# Development Configuration
NODE_ENV=development
DEBUG=true

# WebSocket Configuration
WS_PORT=8080

# File Watching Configuration
WATCH_PATTERNS=src/**/*.{js,jsx,ts,tsx,vue,svelte}
IGNORE_PATTERNS=node_modules/**,dist/**,build/**

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
