{
  "manifest_version": 3,
  "name": "CodeCraft - Visual AI Coding Assistant",
  "version": "1.0.0",
  "description": "Free alternative to Stagewise - Click elements and tell AI what to change",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CodeCraft"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js", "panel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
